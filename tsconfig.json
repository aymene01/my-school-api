{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"lib": ["ES2022"],
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"isolatedModules": false,
		"moduleResolution": "node",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": "src",
		"outDir": "./dist",
		"paths": {
			"@/*": ["./*"],
			"@/tests/*": ["tests/*"],
			"@/http/*": ["http/*"],
			"@/utils/*": ["http/utils/*"],
			"@/middlewares/*": ["http/middlewares/*"],
			"@/lib/*": ["lib/*"],
			"@/iam/*": ["iam/*"],
			"@/toolbox/*": ["toolbox/*"]
		}
	},
	"include": ["src/**/*.ts", "prisma/**/*.ts", "Request.d.ts"],
	"exclude": ["node_modules", "dist"],
	"files": ["types/definition.d.ts"]
}
